@model EnderecoModel
@{

    ViewData["Title"] = "Cadastrar Endereços";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Endereços</h1>

</div>

  
<form asp-controller="Enderecos" asp-action="Adicionar" method="post">
  <div class="form-row">
    <div class="form-group">
      <label for="inputEndereco">Endereco</label> 
      <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite seu Endereço">
    </div>
    <div class="form-group"> 
      <label for="inputCEP">CEP</label>
      <input type="number" asp-for="CEP" class="form-control" placeholder="Digite seu CEP">
    </div>
  </div>
  <div class="form-group">
    <label for="inputCidade">Cidade</label>
    <input type="text" asp-for="Cidade" class="form-control" placeholder="Digite sua Cidade">
  </div>
  <div class="form-group">
    <label for="inputEstado">Estado</label>
    <input type="text" asp-for="Estado" class="form-control" placeholder="Digite o seu Estado">
  </div>
  <div class="form-group">
  </div>
  <button type="submit" class="btn btn-primary btn-sm" asp-action="Adicionar">Adicionar</button>
  <a class="btn btn-secondary btn-sm" asp-controller="Enderecos" asp-action="Index" role="button">Voltar</a>
</form>